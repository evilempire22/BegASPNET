<configuration>

    <connectionStrings>
        <add name="PlanetWroxConnectionString1" connectionString="Data Source=.\SQLEXPRESS;AttachDbFilename=|DataDirectory|\PlanetWrox.mdf;Integrated Security=True;User Instance=True"
            providerName="System.Data.SqlClient" />
    </connectionStrings>
    <system.web>
      <pages theme="Monochrome">
        <controls>
          <add tagPrefix="Wrox" tagName="Banner" src="~/Controls/Banner.ascx"/>
        </controls>
      </pages>
        <compilation debug="false" targetFramework="4.0" />
    </system.web>
  <system.net>
    <mailSettings>
      <smtp deliveryMethod="SpecifiedPickupDirectory">
        <specifiedPickupDirectory pickupDirectoryLocation="H:\TempMail"/>
      </smtp>
    </mailSettings>
  </system.net>
</configuration>
